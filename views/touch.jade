doctype 5
html(lang="en")
  head
    title Meemplex Control
    meta(http-equiv="content-type", content="text/html; charset=UTF-8")
    link(rel="icon", type="image/png", href="/images/icons/light-bulb.png")
    link(rel="apple-touch-icon", href="images/majitek.jpg")
    
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black")
    meta(name="apple-touch-fullscreen", content="yes")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=0.5, user-scalable=yes")

    link(type="text/css", rel="stylesheet", href="css/bootstrap.min.css")
    link(type="text/css", rel="stylesheet", href="css/meemplex_touch.css")
    link(type="text/css", rel="stylesheet", href="css/isotope.css")
    
    script(data-main="js/main", src="js/lib/require.js")

  body
    #mainContainer
      h1#title
      #controlsContainer
        #controls.clearfix.isotope.fitRows
        //- #controls
      #selectorContainer
        #classSelectors
          #functionSelectors.btn-group
            legend Function
          #locationSelectors.btn-group
            legend Location
