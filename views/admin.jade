doctype 5
html(lang="en")
  head
    title Meemplex Control
    meta(http-equiv="content-type", content="text/html; charset=UTF-8")
    link(rel="icon", type="image/png", href="/images/icons/light-bulb.png")
    link(rel="apple-touch-icon", href="images/majitek.jpg")
    
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black")
    meta(name="apple-touch-fullscreen", content="yes")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=0.5, user-scalable=no")

    link(type="text/css", rel="stylesheet", href="css/ui-lightness/jquery-ui-1.10.2.custom.min.css")
    link(type="text/css", rel="stylesheet", href="css/jquery.mobile-1.3.0.min.css")
    link(type="text/css", rel="stylesheet", href="css/meemplex_touch.css")
    link(type="text/css", rel="stylesheet", href="css/isotope.css")
    
    script(data-main="javascripts/main", src="javascripts/lib/require.js")
    
  body
    #mainContainer
      h1#title MQTT UI
      #controlsContainer
        #controls.clearfix.isotope.fitRows
      #selectorContainer
        #classSelectors
          #functionSelectors(data-role="controlgroup", data-type="horizontal")
            legend Function
          #locationSelectors(data-role="controlgroup", data-type="horizontal")
            legend Location
